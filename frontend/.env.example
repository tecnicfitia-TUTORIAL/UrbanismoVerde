# EcoUrbe AI - Frontend Environment Variables
# Copy this file to .env and fill in your values

# ==========================================
# SUPABASE CONFIGURATION
# ==========================================
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ==========================================
# API ENDPOINTS
# ==========================================
VITE_API_URL=http://localhost:4000
# Google Cloud Run Backend URL (Production)
# Note: This is the public Cloud Run service URL - safe to expose
VITE_AI_SERVICE_URL=https://urbanismoverde-903228431552.europe-west9.run.app
# Local development (uncomment to use local backend)
# VITE_AI_SERVICE_URL=http://localhost:8080

# ==========================================
# GOOGLE APIS
# ==========================================
# Google Maps API (same key works for Gemini)
VITE_GOOGLE_MAPS_API_KEY=AIzaSy...your-google-api-key

# ==========================================
# FEATURE FLAGS
# ==========================================
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_SERVICE_WORKER=true
VITE_SYNC_INTERVAL_MS=30000

# ==========================================
# MAP CONFIGURATION
# ==========================================
# Optional: Add your own map provider tokens
# VITE_MAPBOX_TOKEN=your_mapbox_token_here
# VITE_GOOGLE_MAPS_KEY=your_google_maps_key_here

# ==========================================
# ANALYTICS (Optional)
# ==========================================
# VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# VITE_SENTRY_DSN=https://your-sentry-dsn
